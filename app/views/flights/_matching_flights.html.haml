.flight-list
  %h3= choose_flight_header(params[:from_airport_id], params[:to_airport_id], params[:flight_date])

  = form_tag('/flights', method: 'get', role: 'form') do
    = render flights
    = hidden_field_tag(:passengers, params[:passengers])
    = submit_tag('Choose Flight', class: 'btn btn-info')
